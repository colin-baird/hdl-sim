 (public_name hdl-sim)
 (name main)
 (libraries hdl_sim_lib))

(executable
 (public_name verilog-parse)
 (name parse_driver)
 (libraries verilog_parser))

(executable
 (public_name verilog-elab)
 (name elab_driver)
 (libraries verilog_parser verilog_elab))

(executable
 (public_name verilog-lower)
